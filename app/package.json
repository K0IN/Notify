{
    "name": "notify_worker",
    "version": "1.0.0",
    "description": "Notify worker",
    "main": "dist/worker.js",
    "scripts": {
        "build_all": "webpack && cd frontend && npm i && npm run build",
        "build": "webpack",
        "serve": "miniflare ./dist/worker.js --kv-persist --wrangler-config wrangler.toml",
        "dev": "miniflare ./dist/worker.js --kv-persist --wrangler-config wrangler.toml --watch",
        "publish": "wrangler publish",
        "integrationstest": "npm run build && ava --verbose integrationstest/*.spec.mjs",
        "unittest": "jest",
        "test": "npm run unittest && npm run integrationstest"
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "typescript",
            "prettier"
        ]
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^2.2.2",
        "@types/jest": "^27.0.2",
        "@types/web-push": "^3.3.2",
        "ava": "^3.15.0",
        "jest": "^27.2.2",
        "miniflare": "^1.4.0",
        "ts-jest": "^27.0.5",
        "ts-loader": "^9.2.2",
        "typescript": "^4.4.3",
        "webpack": "^5.51.1",
        "webpack-cli": "^4.7.0",
        "wrangler": "^0.0.2"
    },
    "dependencies": {
        "@cloudflare/kv-asset-handler": "^0.1.3",
        "itty-router": "^2.4.2"
    }
}
