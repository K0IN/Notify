{
    "name": "Ubuntu",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "ubuntu-22.04"
        }
    },
    "forwardPorts": [
        8787
    ],
    "postCreateCommand": "cd app && npm run setup && Xvfb -ac :99 -screen 0 1280x1024x16 > /dev/null 2>&1",
    // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
    // "remoteUser": "vscode",
    "features": {
        "desktop-lite": "latest"
	},
    "containerEnv": {
        "Display": ":99"
    },
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"eg2.vscode-npm-script"
			]
		}
	}
}